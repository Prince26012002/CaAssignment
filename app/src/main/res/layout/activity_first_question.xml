<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context=".FirstQuestion">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Microsoft Teams"
        android:layout_gravity="center"
        android:textSize="30dp"
        android:textColor="#7753AA"></TextView>
    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="220dp"
        android:layout_height="220dp"
        android:layout_marginTop="5dp"
        app:cardCornerRadius="220dp"
        android:layout_gravity="center"
        android:src="@drawable/image1">
    </de.hdodenhof.circleimageview.CircleImageView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_gravity="center"
        android:text="Get started with your work, school or"
        android:textColor="#7C8091"
        android:textSize="20dp"></TextView>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="personal Microsoft account"
        android:textColor="#7C8091"
        android:textSize="20dp"></TextView>

    <EditText
        android:layout_width="270dp"
        android:layout_height="50dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/edittextbg"
        android:hint="Enter email, phone or Skype"
        android:textColorHint="#6A6077"
        android:paddingLeft="15dp"
        android:layout_gravity="center"></EditText>

    <com.google.android.material.button.MaterialButton
        android:layout_width="270dp"
        android:layout_height="60dp"
        android:layout_gravity="center"
        app:cornerRadius="10dp"
        android:layout_marginTop="5dp"
        android:backgroundTint="#864DD8"
        android:text="Sign in"
        android:textAllCaps="false"
        android:textSize="20dp"></com.google.android.material.button.MaterialButton>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="5dp"
        android:clickable="true"
        android:text="Get help with signing in"
        android:textSize="20dp"
        android:textColor="#7753AA"></TextView>
    <com.google.android.material.button.MaterialButton
        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
        android:layout_width="320dp"
        android:layout_height="55dp"
        android:layout_marginTop="5dp"
        android:layout_gravity="center"
        app:strokeColor="#9B7DD1"
        app:strokeWidth="2dp"
        app:cornerRadius="10dp"
        android:text="Join a meeting"
        android:textAllCaps="false"
        android:textSize="18dp"
        android:textColor="#7753AA"></com.google.android.material.button.MaterialButton>

    <com.google.android.material.button.MaterialButton
        style="@style/Widget.MaterialComponents.Button.OutlinedButton.Icon"
        android:layout_width="320dp"
        android:layout_height="55dp"
        android:layout_gravity="center"
        app:icon="@drawable/microsoft"
        app:iconSize="20dp"
        app:iconGravity="textStart"
        app:iconTint="@null"
        app:iconPadding="10dp"
        app:cornerRadius="10dp"
        android:text="Sign up for free"
        android:textAllCaps="false"
        android:textSize="18dp"
        android:textColor="#7753AA"
        app:strokeColor="#9B7DD1"
        app:strokeWidth="2dp"></com.google.android.material.button.MaterialButton>


</LinearLayout>